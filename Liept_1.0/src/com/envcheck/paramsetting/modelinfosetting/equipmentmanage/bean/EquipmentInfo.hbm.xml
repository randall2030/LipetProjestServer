<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	
	<class name="com.envcheck.paramsetting.modelinfosetting.equipmentmanage.bean.EquipmentInfo" table="equipment_info">

		<id name="id" type="java.lang.String">
			<column name="id" length="32" />
			<generator class="uuid"></generator>
		</id>


		<property name="deviceName" type="java.lang.String" >
			<column name="device_name" length="20" not-null="true"></column>
		</property>

		<property name="areaName" type="java.lang.String" >
			<column name="area_name" length="20" not-null="true"></column>
		</property>

		<property name="equipmentName" type="java.lang.String" >
			<column name="equipment_name" length="20" not-null="true"></column>
		</property>

		<property name="equipmentNumber" type="java.lang.String" >
			<column name="equipment_number" length="20" not-null="true"></column>
		</property>



		<property name="createTime"  column="create_time" type="java.util.Date"  length="20"></property>
		<property name="createPerson" column="create_person" type="java.lang.String"  length="20"></property>
		<property name="modifyTime" column="modify_time" type="java.util.Date"  length="20"></property>
		<property name="modifyPerson" column="modify_person" type="java.lang.String"  length="20"></property>
		
	</class>

</hibernate-mapping>

